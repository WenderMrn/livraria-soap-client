	$(".livros-item").hide();

	$.each(livros, function(index,livro) {

	  if($("#livro-"+livro.id).length){
	    $("#livro-"+livro.id).show(); 
		}

	});

	// exibir mesagem informando que a pesquisa n√£o trouxe resultados

}else{
