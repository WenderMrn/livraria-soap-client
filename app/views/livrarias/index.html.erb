<h1>Acervo</h1>
<div class="row justify-content-end">
		<form class="form-inline my-2 my-lg-0">
	    <input class="form-control mr-sm-2" type="text" placeholder="Buscar">
	    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Buscar</button>
		</form>
</div>
<div class="row justify-content-md-center">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Código</th>
				<th>Título</th>
				<th>Autor</th>
				<th>Ações</th>
			</tr>
		</thead>
		<tbody>
			<% @livros.each do |livro| %>
			<tr>
				<th scope="row"><%= livro[:codigo] %></th>
				<td><%= livro[:titulo] %></td>
				<td><%= livro[:autor] %></td>
				<td>
				<button type="button" class="btn btn-outline-primary btn-sm">Visualizar</button>
				<button type="button" class="btn btn-outline-primary btn-sm">Editar</button>
				<button type="button" class="btn btn-outline-danger btn-sm">Deletar</button>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>	
</div>